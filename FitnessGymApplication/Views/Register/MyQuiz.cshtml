<section>

    <h2>My profil and my goals:</h2> <br />

    <div class="flex-container flex-md-row p-1 justify-content-evenly">

        <div class="p-1">
            <h6>My informations: </h6> <br />

            <div class="mb-3" style="width: 15rem;">
                <label for="exampleFormControlInput1" class="form-label">My weight:</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="75 kg">
            </div>

            <div class="mb-3" style="width: 15rem;">
                <label for="exampleFormControlInput1" class="form-label">My height:</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="175 cm">
            </div>

            <div class="mb-3" style="width: 20rem;">
                <label for="exampleFormControlInput1" class="form-label">My predisposition:</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Blood pressure, diabetes...">
            </div>
        </div>

        <div class="p-1">
            <h6>My goals: </h6> <br />

            <div class="mb-3" style="width: 15rem;">
                <label for="exampleFormControlInput1" class="form-label">My weight goal:</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="70 kg">
            </div>

            <div class="mb-3" style="width: 15rem;">
                <label for="exampleFormControlInput1" class="form-label">Calories consumed target:</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="1800 kcal">
            </div>

            <div class="mb-3" style="width: 15rem;">
                <label for="exampleFormControlInput1" class="form-label">Calories burned target:</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="800 kcal">
            </div>
        </div>

    </div>

</section>
