@model IEnumerable<FitnessGymApplication.Models.IndividualProgram>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrainingProgram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingProgram.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>




@foreach (var item in Model)
{
    <h1>@Html.DisplayFor(modelItem => item.TrainingProgram.Name)</h1>
                    
    @foreach (var ind in item.TrainingProgram.IndividualPrograms)
    {
        <p>@ind.Exercise.Name</p>
        <td>
            <a asp-action="Edit" asp-route-id="@ind.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@ind.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@ind.Id">Delete</a>
        </td>
    }  
}
   